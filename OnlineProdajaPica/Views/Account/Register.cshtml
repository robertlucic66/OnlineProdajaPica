@model OnlineProdajaPica.Models.RegisterViewModel
@{ ViewBag.Title = "Registracija"; }

<h2>@ViewBag.Title</h2>
<div class="form-container">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="input-cnt">
            <i class="material-icons">email</i>
            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })
        </div>
        <div class="input-cnt">
            <i class="material-icons">lock</i>
            @Html.TextBoxFor(m => m.Password, new { @placeholder = "Lozinka" })
        </div>
        <div class="input-cnt">
            <i class="material-icons">lock</i>
            @Html.TextBoxFor(m => m.ConfirmPassword, new { @placeholder = "Potvrdite lozinku" })
        </div> 
        <div class="input-cnt">
            <input type="submit" class="btn btn-default" value="Registriraj se" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
